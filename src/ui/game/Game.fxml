<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<?import ui.game.dice.DiceRollControl?>
<?import ui.game.map.MapControl?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" styleClass="background" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.game.GameController">
  <children>
    <Pane onMouseClicked="#closePopup" styleClass="blackout" />
    <GridPane hgap="20.0" vgap="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
      <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="650.0" prefWidth="650.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="80.0" vgrow="NEVER" />
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="450.0" vgrow="NEVER" />
        <RowConstraints minHeight="100.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
        <!-- Title -->
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="@Logo.png" />
          </image>
          <GridPane.margin>
            <Insets left="10.0" />
          </GridPane.margin>
        </ImageView>
        <!-- Map -->
        <Label text="Map" GridPane.rowIndex="1" GridPane.valignment="TOP">
          <GridPane.margin>
            <Insets left="3.0" top="8.0" />
          </GridPane.margin>
        </Label>
        <Pane fx:id="centerPane" styleClass="section" GridPane.rowIndex="1">
          <GridPane.margin>
            <Insets top="30.0" />
          </GridPane.margin>
          <children>
            <MapControl fx:id="mapControl">
          </MapControl>
        </children>
      </Pane>
      <!-- Actions -->
      <Label text="Actions" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP">
        <GridPane.margin>
          <Insets left="3.0" top="8.0" />
        </GridPane.margin>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" styleClass="section" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <GridPane.margin>
          <Insets top="30.0" />
        </GridPane.margin>
        <children>
          <Button onAction="#rollDice" text="Roll Dice" />
        </children>
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
      </VBox>
      <!-- Other -->
      <Label text="Spare Panel" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP">
        <GridPane.margin>
          <Insets left="3.0" top="8.0" />
        </GridPane.margin>
      </Label>
      <Pane styleClass="section" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <GridPane.margin>
          <Insets top="30.0" />
        </GridPane.margin>
      </Pane>
      <!-- Console -->
      <Label text="Console" GridPane.rowIndex="2" GridPane.valignment="TOP">
        <GridPane.margin>
          <Insets left="3.0" top="8.0" />
        </GridPane.margin>
      </Label>
      <TextArea fx:id="consoleTextArea" editable="false" style="-fx-background-radius: 0px;" styleClass="section" text="This is some text&#10;and some more" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <GridPane.margin>
          <Insets top="30.0" />
        </GridPane.margin>
      </TextArea>
    </children>
  </GridPane>
  <GridPane fx:id="popup" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="650.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="450.0" valignment="CENTER" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
      <Pane fx:id="popupContent" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="650.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <children>
          <DiceRollControl fx:id="diceRollControl" visible="false">
        </DiceRollControl>
      </children>
    </Pane>
    <Region styleClass="blackout" onMouseClicked="#closePopup" GridPane.rowIndex="1" />
    <Region styleClass="blackout" onMouseClicked="#closePopup"/>
    <Region styleClass="blackout" onMouseClicked="#closePopup" GridPane.columnIndex="1" />
    <Region styleClass="blackout" onMouseClicked="#closePopup" GridPane.columnIndex="2" />
    <Region styleClass="blackout" onMouseClicked="#closePopup" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Region styleClass="blackout" onMouseClicked="#closePopup" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Region styleClass="blackout" onMouseClicked="#closePopup" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Region styleClass="blackout" onMouseClicked="#closePopup" GridPane.rowIndex="2" />
  </children>
</GridPane>
</children>
<stylesheets>
  <URL value="@Game.css" />
</stylesheets>
</AnchorPane>
